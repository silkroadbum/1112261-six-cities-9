{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "ts:import": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/main.cli.ts --import ./mocks/mock-data.tsv",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^0.17.3",
    "pino-pretty": "^13.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "^2.8.1",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "got": "^14.4.6",
    "inversify": "^7.2.0",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2"
  }
}
